<Page
    x:Class="NetWork.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NetWork"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"

    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">


    <Grid BorderBrush="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox  Background="#FF0D3C3C" Text="NetWork" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="28" Margin="0,20,0,0" Width="320" Height="60" FontWeight="Bold" Foreground="White" />
        <RelativePanel Margin="10,81,0,55">
            <TextBlock  x:Name="DateResult" TextWrapping="Wrap" Width="314" Height="32" FontSize="20"  RelativePanel.AlignLeftWithPanel="True" FocusVisualPrimaryBrush="Black"/>
            <TextBlock x:Name="TitleResult" TextWrapping="Wrap" RelativePanel.Below="DateResult" Width="305" Height="57"/>
            <Image x:Name="ImageResult"  RelativePanel.Below="TitleResult" Width="305" RenderTransformOrigin="0.508,0.844" Height="175"/>
            <TextBlock Name="ContentResult1" TextWrapping="Wrap" RelativePanel.Below="ImageResult" Width="305" Height="180"/>
        </RelativePanel>

    </Grid>
  
    
</Page>
